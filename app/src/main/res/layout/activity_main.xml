<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/wizytaWet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wizyta u weterynarza"/>



    <EditText
        android:id="@+id/daneWlasciciela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="imie i nazwisko wlasciciela"/>



    <TextView
        android:id="@+id/gatuneczek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gatunek"/>


    <Spinner
        android:id="@+id/mySimpleSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/ileLat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ile ma lat?"/>


        <TextView
            android:id="@+id/aktualnyWiek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"/>


            <SeekBar
                android:id="@+id/wiekSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="20"
                android:progress="0"/>



    </LinearLayout>
    <EditText
        android:id="@+id/celWizyty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cel wizyty"/>


    <TimePicker
        android:id="@+id/timePickerr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"/>


    <Button
        android:id="@+id/przycisk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK"/>





</LinearLayout>